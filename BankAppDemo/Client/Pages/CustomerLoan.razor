@page "/loanpage/{CustomerId:int}"
@inherits CustomerLoanBase


<h1>Hantera Lån för kunder</h1>


<EditForm Model="@Loan" OnValidSubmit="HandleValidSubmit">
    <hr />

    <h3>Skapa lån</h3>


    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">
            Välj kontotyp
        </label>
        <div class="col-sm-10">

            <InputSelect id="accounttype" @bind-Value="SelectedAccountId">


                @foreach (var account in Accounts)
                {
                    <option value="@account.AccountId"> @account.AccountTypeName</option>
                }


            </InputSelect>


            <div class="form-group row">
                <label for="summa" class="col-sm-2 col-form-label">
                    Summa
                </label>
                <div class="col-sm-10">
                    <InputNumber id="lastName" class="form-control" placeholder="Fyll i en önskad summa"
                                 @bind-Value="@Loan.Amount" />
                </div>
            </div>


            <div class="form-group row">
                <label for="duration" class="col-sm-2 col-form-label">
                    Antal År
                </label>
                <div class="col-sm-10">
                    <InputNumber id="lastName" class="form-control" placeholder="Fyll i hur antal år"
                                 @bind-Value="@Loan.Duration" />
                </div>
            </div>


        </div>
    </div>


    <button type="submit" class="btn btn-primary">Spara</button>


</EditForm>



